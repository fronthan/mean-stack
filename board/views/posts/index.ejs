                    <th scope="col" class="views">Ï°∞Ìöå</th>
                    <th scope="col" class="author">ÏûëÏÑ±Ïûê</th>
                    <th scope="col" class="date">Date</th>
                </tr>
            </thead>
            <tbody>
                <% if(posts==null || posts.length==0) { %>
                    <tr>
                        <td colspan="5">Í≤åÏãúÎ¨ºÏù¥ ÏóÜÏäµÎãàÎã§</td>
                    </tr>
                <% } %>
                <% posts.forEach(function(post) { %>
                    <tr>
                        <td class="numId"><%= post.numId %></td>
                        <td>
                            <!-- viewÏóêÏÑú res.localsÏùò Ìï≠Î™©Îì§ÏùÑ Î∞îÎ°ú ÏÇ¨Ïö©Ìï† Ïàò ÏûàÍ∏∞ ÎïåÎ¨∏Ïóê Í∑∏ÎÉ• getPostQueryStringÏúºÎ°ú Ìò∏Ï∂úÌïúÎã§ -->
                            <a href="/posts/<%= post._id %><%= getPostQueryString() %>" class="title-container">
                                <div data-search-highlight="title" class="ellipsis title-ellipsis float-left">
                                    <span class="title-text"><%= post.title %></span>
                                </div>
                            </a>
                                <% if(post.commentCount) { %>
                                    <small class="title-comments d-inline-block pl-2">(<%= post.commentCount %>)</small>
                                <% }%>
                                <% if(post.attachment) { %>
                                    <small class="title-attachment d-inline-block pl-2">üìÅ</small>
                                <% } %>
                            
                        </td>
                        <td class="views"><%= post.views %></td>
                        <td class="author">
                            <a href="/posts<%= getPostQueryString(false, {searchType: 'author!', searchText:post.author.username }) %>">
                                <div data-search-highlight="author" class="ellipsis">
                                    <%= post.author?post.author.username : "" %>
                               </div>
                            </a>
                        </td>
                        <td class="date">
                            <span data-date="<%= post.createdAt %>">
                                <%= post.createdAt %>
                            </span>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <div class="row mb-3">
            <div class="col-2">
                <% if(isAuthenticated) { %>
                    <a href="/posts/new<%= getPostQueryString() %>" class="btn btn-primary">New</a>
                <% } %>
            </div>

            <nav class="col-8">
                <% var offset=2; var previousBtnEnabled=currentPage>1;
                    var nextBtnEnabled = currentPage<maxPage; %>
                <ul class="pagination pagination-sm justify-content-center align-items-center h-100 mb-0">
                    <li class="page-item <%= previousBtnEnabled?'':'disabled' %>">
                        <a href="/posts?<%= getPostQueryString(false, {page:currentPage-1}) %>" class="page-link"
                            <%=previousBtnEnabled?'':'tabindex=-1' %>>&laquo;
                        </a>
                        <!-- Ïù¥Ï†ÑÌéòÏù¥ÏßÄ Î≤ÑÌäºÏùÑ ÌòÑÏû¨ÌéòÏù¥ÏßÄ-1 Î°ú overwriteÌïúÎã§ -->
                    </li>
                    <% for(i=1; i<=maxPage; i++) { %>
                        <% if(i==1 || i==maxPage || (i>=currentPage-offset && i<=currentPage+offset)) { %>
                            <li class="page-item <%= currentPage==i?'active':'' %>"> 
                                <a href="/posts<%= getPostQueryString(false, {page:i}) %>" class="page-link">
                                    <%= i %>
                                </a>
                                <!-- pageÍ∞Ä iÍ∞Ä ÎêòÎèÑÎ°ù ÎçÆÏñ¥Ïì¥Îã§ -->
                            </li>
                        <% } else if(i==2 || i==maxPage-1) { %>
                            <li><a class="page-link"></a>...</li>
                        <% } %>
                    <% } %>
                    <li class="page-item <%= nextBtnEnabled?'':'disabled' %>"><a
                            class="page-link"
                            href="/posts<%= getPostQueryString(false, {page:currentPage+1}) %>" 
                            <%=nextBtnEnabled?'':'tabindex=:-1' %>>&raquo;
                        </a>
                        <!-- Îã§Ïùå ÌéòÏù¥ÏßÄ Î≤ÑÌäºÏùÑ ÌòÑÏû¨ÌéòÏù¥ÏßÄ+1Ïù¥ ÎêòÎèÑÎ°ù ÎçÆÏñ¥Ïì¥Îã§ -->
                    </li>
                </ul>
            </nav>
        </div>

        <form action="/posts" method="get" class="post-index-tool">
        <!-- form Ïùò methodÎ•º getÏúºÎ°ú ÌïòÎ©¥ form Ìï≠Î™©Îì§Ïù¥ action routeÏùò query stringÏúºÎ°ú Ï†ÑÎã¨ÎêúÎã§ -->
            <div class="form-row">
                <div class="form-group col-3">
                    <label>Î™á Í∞úÏî© Î≥ºÍπåÏöî?</label>
                    <select name="limit" class="custom-select"
                        onchange="this.parentElement.parentElement.parentElement.submit()">
                        <option value="2" <%=limit==2?'selected':'' %>>2 posts</option>
                        <option value="4" <%=limit==4?'selected':'' %>>4 posts</option>
                        <option value="8" <%=limit==8?'selected':'' %>>8 posts</option>
                    </select>
                </div>
                <div class="form-group col-9">
                    <label>Í≤ÄÏÉâ</label>
                    <div class="input-group">
                        <select name="searchType" class="custom-select">
                            <option value="title,body" <%= searchType=='title,body'?'selected'
                        :'' %>>Ï†úÎ™©, ÎÇ¥Ïö©</option>
                        <option value="title" <%= searchType='title'?'selected':''%>>Ï†úÎ™©</option>
                        <option value="body" <%= searchType='body'?'selected':'' %>>ÎÇ¥Ïö©</option>
                        <option value="author" <%= searchType='author'?'selected':''%>>ÏûëÏÑ±Ïûê</option>
                        </select>
                        <input type="text" minlength="3" name="searchText" value="<%= searchText %>">
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary" type="submit">Í≤ÄÏÉâÌïòÍ∏∞</button>
                        </div>
                    </div>
                    <!-- Ïù¥ Í≤ÄÏÉâÏ∞ΩÏóêÏÑú ÏûëÏÑ±ÏûêÎ°ú Í≤ÄÏÉâÌïòÍ≤å ÎêòÎäî Í≤ΩÏö∞Îäî ÏÉÅÎã® ÌÖåÏù¥Î∏îÏùò ÏûëÏÑ±ÏûêÎ•º ÌÅ¥Î¶≠Ìï† ÎïåÏôÄ Í≤ÄÏÉâ Í≤∞Í≥ºÍ∞Ä Îã§Î•¥Îã§. ÏúÑÎäî ÏôÑÏ†ÑÌûà ÏùºÏπòÌïòÎäî ÏûëÏÑ±ÏûêÎßå Í≤ÄÏÉâÌïòÍ≥†, Ïó¨Í∏∞ÏÑúÎäî ÏùºÎ∂ÄÎùºÎèÑ Ìè¨Ìï®ÎêúÎã§Î©¥ Î™®Îì† Í≤åÏãúÎ¨ºÏùÑ Í≤ÄÏÉâÌïúÎã§ -->
                </div>
            </div>
        </form>
    </div>
</body>

</html>